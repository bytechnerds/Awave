{
    "manifest_version": 2,
    "name": "Awave",
    "description": "Awave is a browser extension that empowers visual impaired people, giving them more autonomy on navigating through the web.",
    "author": "byTech",
    "version": "0.0.1",
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content.js"]
        }
    ],
    "background":{
        "scripts":["background.js"]
    },
    "permissions":["tabs"],
    "browser_action":{
        "default_title":"Awave",
        "default_icon":"logo128.png"
    }
}